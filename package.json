{
  "name": "fireseed-trilogy",
  "version": "0.2.7c",
  "private": true,
  "type": "module",
  "description": "Machine-readable civilization interface schemas, generators, and docs.",
  "license": "MIT",
  "keywords": [
    "agi",
    "digital-legacy",
    "schema",
    "decentralized-identity"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/System-null/fireseed-trilogy.git"
  },
  "author": "Fireseed Trilogy Lab",
  "engines": {
    "node": ">=18.17"
  },
  "scripts": {
    "vendors": "node scripts/fetch-vendors.mjs",
    "sign": "node scripts/sign-capsule.mjs examples/capsule.sample.json",
    "sign:file": "node scripts/sign-capsule.mjs examples/capsule.sample.json --privkey-file .secrets/dev-capsule.key",
    "sign:env": "FIRESEED_PRIVKEY=\"$(cat .secrets/dev-capsule.key)\" node scripts/sign-capsule.mjs examples/capsule.sample.json",
    "test:determinism": "CI=1 vitest run tests/determinism.test.js --reporter=dot",
    "verify:keychain": "node scripts/verify-keychain.mjs --timeline tests/fixtures/timeline.valid.json --revocations tests/fixtures/revocations.empty.json",
    "test": "CI=1 vitest run --reporter=dot",
    "validate:access": "node scripts/validate-access.mjs tests/fixtures/access.public.json",
    "release": "semantic-release",
    "dev": "next dev -p 3000",
    "build": "next build",
    "start": "next start -p 3000"
  },
  "devDependencies": {
    "@ipld/car": "^5.2.4",
    "@ipld/dag-cbor": "8.0.1",
    "@noble/ed25519": "2.0.0",
    "@noble/hashes": "1.4.0",
    "ajv": "8.17.1",
    "ajv-formats": "2.1.1",
    "json-canonicalize": "1.0.6",
    "multiformats": "12.1.3",
    "vitest": "2.1.1",
    "@types/node": "20.12.12",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "typescript": "5.5.4"
  },
  "fireseed": {
    "docsLicense": "CC-BY-4.0",
    "contact": "security@fireseedtrilogy.org"
  },
  "dependencies": {
    "next": "14.2.5",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "idb": "8.0.0"
  }
}
