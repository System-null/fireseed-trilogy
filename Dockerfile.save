FROM python:3.10-slim

WORKDIR /app

RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    wget \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

COPY requirements.txt ./

# 删除requirements中旧版faiss-cpu并手动安装兼容版本
RUN sed -i '/faiss-cpu/d' requirements.txt && \
    pip install --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt && \
    pip install faiss-cpu==1.7.4

COPY . /app

ENV PYTHONUNBUFFERED=1
ENV LOCAL_FILES_ONLY=0

EXPOSE 8000

CMD ["uvicorn", "server.app:app", "--host", "0.0.0.0", "--port", "8000"]FROM python:3.11-slim
RUN apt-get update && apt-get install -y --no-install-recommends \
    bash curl ca-certificates libgomp1 && rm -rf /var/lib/apt/lists/*
WORKDIR /app
COPY requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt
COPY . /app
ENV LOCAL_FILES_ONLY=0

# ✅ 在容器中建立 /models → /app/models 的软链接
RUN mkdir -p /app/models && ln -sf /app/models /models

RUN bash scripts/warmup_model.sh
RUN mkdir -p /app/static/og
COPY static/og/.gitkeep /app/static/og/
ENV HF_HUB_DISABLE_TELEMETRY=1 HF_HUB_ENABLE_HF_TRANSFER=1 PYTHONUNBUFFERED=1
CMD ["uvicorn", "server.app:app", "--host", "0.0.0.0", "--port", "8000"]
